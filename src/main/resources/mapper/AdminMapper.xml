<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--一定要写对-->
<mapper namespace="com.work.work.mapper.AdminMapper">

    <select id="getAdminByAccount" resultType="com.work.work.entity.Admin">
        select * from wn_manager where account = #{account}
    </select>

    <!-- 新增插入管理员的SQL语句 -->
    <insert id="insertAdmin" parameterType="com.work.work.entity.Admin" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO wn_manager (account, password, status)
        VALUES (#{account}, #{password}, #{status})
    </insert>

    <delete id="deleteAdminByAccount">
        DELETE FROM wn_manager WHERE account = #{account}
    </delete>
</mapper>